/* pages/records.wxss */
.userinfo {
  height: 10%;
  display: flex;
  flex-direction: row;
  padding: 0rpx 80rpx;
  align-items: center;
}

.userinfo-avatar {
  width: 96rpx;
  height: 96rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  padding-left: 64rpx;
  color: #5cb3cc;
}

.usermotto {
  height: 90%;
  display: flex;
  flex-direction: column;
  padding: 10rpx 40rpx 50rpx 40rpx;
}

.timeTitle{
  font-family: 楷体;
  font-size: 20px;
  color:#681752;
}

.titlePading{
  margin-top: 10px;
  display: flex;
  justify-content: center;
}

.container2 {
  position: fixed; /*填充整个页面*/
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
} 

.timeBar{
  margin-top: 15px;
  display: flex;
  flex:1;
  justify-content: center;
}

.typeBar{
   margin-top: 15px;
   display: flex;
   flex:1;
   justify-content: center;
}

.statusBar{
   margin-top: 15px;
   display: flex;
   flex:1;
   justify-content: center;
}

.table {
  border: 0px solid darkgray;
}
.tr {
  display: flex;
  width: 94%;
  margin-left: 3%;
  justify-content: center;
  height: 3rem;
  align-items: center;
}
.td {
    width:60%;
    justify-content: center;
    text-align: center;
}
.bg-w{
  background: #c4cbcf;
}
.bg-g{
  background: #E6F3F9;
}
.th {
  width: 100%;
  justify-content: center;
  background: #41b349;
  color: #fff;
  display: flex;
  height: 3rem;
  align-items: center;
}